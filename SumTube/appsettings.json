{
  "Ollama": {
    "Port": 11435,
    "DefaultModel": "exaone3.5:7.8b",
    "ServerStartupTimeoutSeconds": 30,
    "ServerReadyTimeoutSeconds": 5,
    "ServerShutdownTimeoutSeconds": 10,
    "ModelDownloadTimeoutMinutes": 30,
    "ConnectionTimeoutMinutes": 10,
    "ModelValidation": {
      "EnableIntegrityCheck": true,
      "EnableFunctionalTest": true,
      "TestPrompt": "안녕하세요",
      "ExpectedResponseLength": 5,
      "ValidationTimeoutSeconds": 30,
      "RetryAttempts": 2
    },
    "ApiOptions": {
      "Temperature": 0.3,
      "TopP": 0.9,
      "MaxTokens": 32768
    }
  },
  "Downloads": {
    "PythonEmbeddedUrl": "https://www.python.org/ftp/python/3.12.0/python-3.12.0-embed-amd64.zip",
    "GetPipUrl": "https://bootstrap.pypa.io/get-pip.py",
    "OllamaUrl": "https://github.com/ollama/ollama/releases/latest/download/ollama-windows-amd64.zip",
    "YtDlpApiUrl": "https://api.github.com/repos/yt-dlp/yt-dlp/releases/latest",
    "OllamaApiUrl": "https://api.github.com/repos/ollama/ollama/releases/latest"
  },
  "Updates": {
    "CheckIntervalHours": 24,
    "RetryAttempts": 3,
    "RetryDelaySeconds": 5
  },
  "YouTube": {
    "SubtitleLanguagePriority": ["ko", "en", "en.*"],
    "MaxTranscriptLength": 150000,
    "TempDirectoryPrefix": "sumtube_"
  },
  "Runtime": {
    "PythonVersion": "3.12.0",
    "BufferSize": 8192,
    "MaxDownloadRetries": 3
  }
}